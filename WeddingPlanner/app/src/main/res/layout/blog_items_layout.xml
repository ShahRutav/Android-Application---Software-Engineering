<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >

    <RelativeLayout
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blog Title"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/blog_title"
            android:layout_marginTop="0dp"
            android:background="#000000" />
        <ImageView
            android:id="@+id/blog_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/blog_title"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:contentDescription="TODO"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            />
        <LinearLayout
            android:id="@+id/owner_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/blog_image">
            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="0.5"
                />
            <TextView
                android:id="@+id/owner_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_below="@id/owner_details"
            android:layout_height="1dip"
            android:layout_marginTop="0dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/blog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_details"
            android:text="Blog Description"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/blog_description"
            android:layout_marginTop="0dp"
            android:background="#000000" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>