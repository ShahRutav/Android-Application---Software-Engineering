<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:id="@+id/email_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="100dp"
            />
        <EditText
            android:id="@+id/name_change_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/cardview_dark_background"
            />
        <EditText
            android:id="@+id/address_change_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:layout_marginTop="20dp"
            android:hint="Address"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/cardview_dark_background"
            />
        <EditText
            android:id="@+id/new_pass_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Password"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:textColorHint="@color/cardview_dark_background"
            android:textColor="@color/cardview_dark_background"
            />
        <EditText
            android:id="@+id/old_pass_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter Current Password"
            android:textColorHint="@color/cardview_dark_background"
            android:layout_marginTop="20dp"
            android:textColor="@color/cardview_dark_background"
            />

        <Button
            android:id="@+id/save_changes_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="20dp"
            android:background="#ffe5aa"
            />
    </LinearLayout>

</ScrollView>